<h2>Crear Nuevo Vendedor</h2>

<div class="card">
  <div class="card-body">
    <form action="/vendedores/crear" method="POST">
      <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" required>
      </div>
      
      <div class="mb-3">
        <label for="direccion" class="form-label">Apellido</label>
        <input type="text" class="form-control" id="direccion" name="direccion" required>
      </div>
      
      <div class="mb-3">
        <label for="telefono" class="form-label">ID Distrito</label>
        <input type="text" class="form-control" id="telefono" name="telefono" required>
      </div>
      
      <div class="mb-3">
        <label for="email" class="form-label">Numero de celular</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a href="/vendedores" class="btn btn-secondary me-md-2">Cancelar</a>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    </form>
  </div>
</div>