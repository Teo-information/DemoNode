<h2>Lista de Vendedores</h2>

<div class="row mb-4">
  <div class="col-md-6">
    <form action="/vendedores/buscar" method="GET" class="d-flex">
      <input type="text" name="termino" class="form-control me-2" placeholder="Buscar por ID..." value="{{termino}}">
      <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
  </div>
  <div class="col-md-6 text-end">
    <a href="/vendedores/crear" class="btn btn-success">Nuevo Vendedor</a>
  </div>
</div>

{{#if vendedores.length}}
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID Vendedor</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Teléfono</th>
          <th>ID Distrito</th>
          <th>Celular</th>
        </tr>
      </thead>
      <tbody>
        {{#each vendedores}}
          <tr>
            <td>{{id}}</td>
            <td>{{nombre}}</td>
            <td>{{direccion}}</td>
            <td>{{telefono}}</td>
            <td>{{email}}</td>
            <td>
              <a href="/vendedores/editar/{{id}}" class="btn btn-warning btn-sm">Editar</a>
              <a href="/vendedores/eliminar/{{id}}" class="btn btn-danger btn-sm" onclick="return confirm('¿Está seguro de eliminar este vendedor?')">Eliminar</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <div class="alert alert-info">
    No se encontraron vendedores{{#if termino}} para la búsqueda "{{termino}}"{{/if}}.
  </div>
{{/if}}