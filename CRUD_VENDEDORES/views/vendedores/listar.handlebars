<h2>Lista de Vendedores</h2>

{{!-- Search Form --}}
<form action="/vendedores/buscar" method="POST">
    <label for="id_ven">Buscar por ID:</label>
    <input type="number" id="id_ven" name="id_ven">

    <label for="nom_ven">Buscar por Nombre:</label>
    <input type="text" id="nom_ven" name="nom_ven">

    <button type="submit">Buscar</button>
</form>

<a href="/vendedores/crear">Crear Nuevo Vendedor</a>

{{#if vendedores.length}}
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Celular</th>
                <th>Distrito</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each vendedores}}
                <tr>
                    <td>{{id_ven}}</td>
                    <td>{{nom_ven}}</td>
                    <td>{{ape_ven}}</td>
                    <td>{{cel_ven}}</td>
                    <td>{{nom_dis}}</td>
                    <td>
                        {{!-- Link to edit form --}}
                        <a href="/vendedores/editar/{{id_ven}}">Editar</a>

                        {{!-- Form to delete (using POST for simplicity) --}}
                        <form action="/vendedores/eliminar/{{id_ven}}" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('¿Estás seguro de eliminar a {{nom_ven}}?');">Eliminar</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No se encontraron vendedores.</p>
{{/if}}

{{#if mensajeError}}
    <p style="color: red;">{{mensajeError}}</p>
{{/if}}